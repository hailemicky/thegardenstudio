{
  "name": "@adonisjs/mail",
  "version": "7.2.0",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "main": "build/providers/MailProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src",
    "build/commands",
    "build/templates",
    "build/instructions.js",
    "build/instructions.d.ts",
    "build/instructions.md"
  ],
  "typings": "./build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/mail",
    "lint": "eslint . --ext=.ts"
  },
  "keywords": [
    "adonis",
    "mailer",
    "node-mailer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^5.1.8",
    "@adonisjs/mrm-preset": "^4.1.0",
    "@adonisjs/repl": "^3.1.2",
    "@adonisjs/require-ts": "^2.0.4",
    "@adonisjs/sink": "^5.1.3",
    "@adonisjs/view": "^6.0.3",
    "@poppinss/dev-utils": "^1.1.4",
    "@types/node": "^15.6.2",
    "aws-sdk": "^2.919.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^3.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^1.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "github-label-sync": "^2.0.0",
    "husky": "^6.0.0",
    "japa": "^3.1.1",
    "luxon": "^1.27.0",
    "mrm": "^3.0.2",
    "np": "^7.5.0",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.1.0",
    "@adonisjs/view": "^6.0.0"
  },
  "dependencies": {
    "@poppinss/colors": "^2.1.4",
    "@poppinss/manager": "^4.0.3",
    "@poppinss/utils": "^3.1.3",
    "fastq": "^1.11.0",
    "get-stream": "^6.0.1",
    "got": "^11.8.2",
    "ical-generator": "^2.2.0",
    "multi-part": "^3.0.0",
    "nodemailer": "^6.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/mail/issues"
  },
  "homepage": "https://github.com/adonisjs/mail#readme",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "types": "@adonisjs/mail",
    "providers": [
      "@adonisjs/mail"
    ],
    "commands": [
      "@adonisjs/mail/build/commands"
    ]
  }
}
